{{!< default}}

{{#post}}
    {{#if feature_image}}
    <section 
        data-jarallax 
        data-speed=".8" 
        class="py-12 py-md-15 bg-cover jarallax" 
        style="background-image: url({{img_url feature_image size="l"}});">
    </section>
    {{/if}}

<section class="pt-8 pt-md-11">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-10 col-lg-9 col-xl-8">

                <h1 class="display-4 text-center">
                    {{title}}
                </h1>
                {{#if custom_excerpt}}
                <p class="lead mb-7 text-center text-muted">
                    {{custom_excerpt}}
                </p>
                {{/if}}
                <div class="row align-items-center py-5 border-top border-bottom">
                    <div class="col-auto">
                        {{#foreach authors}}
                        <div class="avatar avatar-lg">
                            <img class="avatar-img rounded-circle" src="{{img_url profile_image size="xs"}}" alt="{{name}}" />
                        </div>
                        {{/foreach}}
                    </div>
                    <div class="col ml-n5">
                        <section class="post-full-byline-meta">
                            <h6 class="text-uppercase mb-0">{{authors}}</h6>
                            <div class="byline-meta-content">
                                <time class="byline-meta-date font-size-sm text-muted" datetime="{{date format="YYYY-MM-DD"}}">{{date format="D MMM YYYY"}}</time>
                                <span class="byline-reading-time font-size-sm text-muted"><span class="bull">&bull;</span> {{reading_time}}</span>
                            </div>
                        </section>
                    </div>
                    <div class="col-auto">
                        <span class="h6 text-uppercase text-muted d-none d-md-inline mr-4">
                            Compartir:
                        </span>
                        <ul class="d-inline list-unstyled list-inline list-social">
                            <li class="list-inline-item list-social-item mr-3">
                            <a href="#!" class="text-decoration-none">
                                <img src="{{asset "/theme/assets/img/icons/social/instagram.svg"}}" class="list-social-icon" alt="...">
                            </a>
                            </li>
                            <li class="list-inline-item list-social-item mr-3">
                            <a href="#!" class="text-decoration-none">
                                <img src="{{asset "/theme/assets/img/icons/social/facebook.svg"}}" class="list-social-icon" alt="...">
                            </a>
                            </li>
                            <li class="list-inline-item list-social-item mr-3">
                            <a href="#!" class="text-decoration-none">
                                <img src="{{asset "/theme/assets/img/icons/social/twitter.svg"}}" class="list-social-icon" alt="...">
                            </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div> 
    </div> 
</section>

<section class="py-6 py-md-8">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-10 col-lg-9 col-xl-8">
                <section class="post-full-content">
                    <div class="post-content">
                        {{content}}
                    </div>
                </section>
            </div>
        </div>
    </div>
</section>

<section class="pt-6 pt-md-8 pb-8 pb-md-11">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-10 col-lg-9 col-xl-8">
                <div class="row align-items-center py-5 border-top border-bottom">
                    <div class="col-auto">
                        {{#foreach authors}}
                        <div class="avatar avatar-lg">
                            <img class="avatar-img rounded-circle" src="{{img_url profile_image size="xs"}}" alt="{{name}}" />
                        </div>
                        {{/foreach}}
                    </div>
                    <div class="col ml-n5">
                        {{#foreach authors}}
                            {{#if bio}}
                            <div class="bio">
                                <h6 class="text-uppercase mb-1">
                                    {{name}}
                                </h6>
                                <p class="font-size-sm text-gray-600 mb-1">{{bio}}</p>
                                <p class="font-size-sm mb-0"><a href="{{url}}">Ver más posts de este autor</a></p>
                            </div>
                            {{else}}
                            <h6 class="text-uppercase mb-1">
                                {{name}}
                            </h6>
                            <p class="font-size-sm mb-0"><a href="{{url}}">Ver más posts de este autor</a></p>
                            {{/if}}
                        {{/foreach}}
                        <section class="post-full-byline-meta">
                            <div class="byline-meta-content">
                                <time class="byline-meta-date font-size-sm text-muted" datetime="{{date format="YYYY-MM-DD"}}">{{date format="D MMM YYYY"}}</time>
                                <span class="byline-reading-time font-size-sm text-muted"><span class="bull">&bull;</span> {{reading_time}}</span>
                            </div>
                        </section>
                    </div>
                    <div class="col-auto">
                        <span class="h6 text-uppercase text-muted d-none d-md-inline mr-4">
                            Compartir:
                        </span>
                        <ul class="d-inline list-unstyled list-inline list-social">
                            <li class="list-inline-item list-social-item mr-3">
                                <a href="#!" class="text-decoration-none">
                                    <img src="{{asset "/theme/assets/img/icons/social/instagram.svg"}}" class="list-social-icon" alt="...">
                                </a>
                            </li>
                            <li class="list-inline-item list-social-item mr-3">
                                <a href="#!" class="text-decoration-none">
                                    <img src="{{asset "/theme/assets/img/icons/social/facebook.svg"}}" class="list-social-icon" alt="...">
                                </a>
                            </li>
                            <li class="list-inline-item list-social-item mr-3">
                                <a href="#!" class="text-decoration-none">
                                    <img src="{{asset "/theme/assets/img/icons/social/twitter.svg"}}" class="list-social-icon" alt="...">
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div> 
    </div> 
</section>

<div class="position-relative mt-n8">
    <div class="shape shape-bottom shape-fluid-x svg-shim text-light">
        <svg viewBox="0 0 2880 480" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" clip-rule="evenodd" d="M2160 0C1440 240 720 240 720 240H0v240h2880V0h-720z"
                fill="currentColor" /></svg>
    </div>
</div>

{{!-- Links to Previous/Next posts --}}
{{#if primary_tag}}
{{#get "posts" filter="tags:{{primary_tag.slug}}+id:-{{id}}" limit="3" as |related_posts|}}
    {{#if related_posts}}
    <section class="py-7 py-md-10 bg-light">
        <div class="container">
            <div class="row align-items-center mb-5">
                <div class="col-12 col-md">
                    <h3 class="mb-0">
                        Posts relacionados
                    </h3>
                    <p class="mb-0 text-muted">
                        {{#../primary_tag}}
                        Encuentra más sobre <a href="{{url}}">
                            <span class="badge badge-lg badge-primary-soft">
                                <span class="h6 text-uppercase font-weight-bold">{{name}}</span>
                            </span>
                        </a>
                        {{/../primary_tag}}
                    </p>
                </div>
                <div class="col-12 col-md-auto">
                    <a href="#!" class="btn btn-sm btn-outline-gray-300 d-none d-md-inline">
                        Ver todos
                    </a>
                </div>
            </div> 
            <div class="row">
                {{#foreach related_posts}}
                    <div class="col-12 col-md-6 col-lg-4 d-flex">
                    {{> "post-vertical-card"}}
                    </div>
                {{/foreach}}
            </div>
        </div>
    </section>
    {{/if}}
{{/get}}
{{/if}}

{{/post}}