    {{!-- Scripts for Members subscription --}}
    <script>
        // Parse the URL parameter
        function getParameterByName(name, url) {
            if (!url) url = window.location.href;
            name = name.replace(/[\[\]]/g, "\\$&");
            var regex = new RegExp("[?&]" + name + "(=([^&#]*)|&|#|$)"),
                results = regex.exec(url);
            if (!results) return null;
            if (!results[2]) return '';
            return decodeURIComponent(results[2].replace(/\+/g, " "));
        }

        // Give the parameter a variable name
        var action = getParameterByName('action');

        $(document).ready(function () {
            Array.prototype.forEach.call(document.querySelectorAll('form[data-members-personalized-form]'), function (form) {
            var errorEl = $('div[data-members-error]');
            var successEl = $('div[data-members-success]');
            function submitHandler(event) {
                form.removeEventListener('submit', submitHandler);
                event.preventDefault();
                errorEl.addClass('d-none');
                successEl.addClass('d-none');
                var input = event.target.querySelector('input[data-members-email]');
                var email = input.value;
                var emailType = undefined;
                var labels = [];

                if (form.dataset.membersForm) {
                    emailType = form.dataset.membersForm;
                }

                $('.form-loading').removeClass('d-none');
                fetch('{{blog-url}}/members/api/send-magic-link/', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        email: email,
                        emailType: emailType,
                        labels: labels
                    })
                }).then(function (res) {
                    form.addEventListener('submit', submitHandler);
                    $('.form-loading').addClass('d-none');
                    if (res.ok) {
                        successEl.removeClass('d-none');
                    } else {
                        if (errorEl) {
                            errorEl.innerText = 'Ocurrió un error al mandar el correo de bienvenida. Intenta de nuevo más tarde';
                        }
                        errorEl.removeClass('d-none');
                    }
                });
            }
            form.addEventListener('submit', submitHandler);
        });
        });
    </script>

