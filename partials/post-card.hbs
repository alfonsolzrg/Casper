<div class="col-12">
    {{#if feature_image}}
    <div class="card card-row shadow-light-lg lift mb-6">
        <div class="row no-gutters">
            {{#if featured}}
            <div class="col-12">
                <span class="badge badge-pill badge-gray-600 badge-float badge-float-outside">
                    <span class="h6 text-uppercase">Principal</span>
                </span>
            </div>
            {{/if}}
            <a class="col-12 col-md-6 bg-cover card-img-left"
                style="background-image: url({{img_url feature_image size="m"}});" href="{{url}}">
                <img src="{{img_url feature_image size="m"}}" alt="{{title}}" loading="lazy"
                    class="img-fluid d-md-none invisible post-card-image">
                <div class="shape shape-right shape-fluid-y svg-shim text-white d-none d-md-block">
                    <svg viewBox="0 0 112 690" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M116 0H51v172C76 384 0 517 0 517v173h116V0z" fill="currentColor" /></svg>
                </div>
            </a>
            <div class="col-12 col-md-6">
                <a class="card-body" href="{{url}}">
                    <h3>
                        {{title}} 
                        {{#if primary_tag}}
                            {{#primary_tag}}
                                <span class="badge badge-pill badge-primary-soft">
                                    <span class="h6 text-uppercase">
                                        {{name}}
                                    </span>
                                </span>
                            {{/primary_tag}}
                        {{/if}}
                        
                    </h3>
                    <p class="mb-0 text-muted">
                        {{excerpt words="44"}}
                    </p>
                </a>
                <a class="card-meta" href="{{url}}">
                    <hr class="card-meta-divider">
                    {{#foreach authors}}
                    <div class="avatar avatar-sm mr-2">
                        <img class="avatar-img rounded-circle" src="{{img_url profile_image size="xs"}}" alt="{{name}}" />
                    </div>
                    <h6 class="text-uppercase text-muted mr-2 mb-0">
                        {{name}}
                    </h6>
                    {{/foreach}}
                    <p class="h6 text-uppercase text-muted mb-0 ml-auto">
                        <time datetime="{{date format="YYYY-MM-DD"}}">{{date format="D MMM YYYY"}}</time> <span
                            class="bull">&bull;</span>
                        {{reading_time minute="Un minuto" minutes="% minutos"}}</span>
                    </p>
                </a>
            </div>
        </div>
    </div>
    {{else}}
    <div class="card shadow-light-lg lift mb-6">
        {{#if featured}}
        <div class="col-12">
            <span class="badge badge-pill badge-gray-600 badge-float badge-float-outside">
                <span class="h6 text-uppercase">Principal</span>
            </span>
        </div>
        {{/if}}
        <a class="card-body my-auto" href="{{url}}">
            <h3 class="mt-auto">
                {{title}}
                {{#if primary_tag}}
                    {{#primary_tag}}
                        <span class="badge badge-primary-soft">{{name}}</span>
                    {{/primary_tag}}
                {{/if}}
            </h3>
            <p class="mb-0 text-muted">
                {{excerpt words="44"}}
            </p>
        </a>
        <a class="card-meta" href="{{url}}">
            <hr class="card-meta-divider">
            {{#foreach authors}}
                <div class="avatar avatar-sm mr-2">
                    <img class="avatar-img rounded-circle" src="{{img_url profile_image size="xs"}}" alt="{{name}}" />
                </div>
                <h6 class="text-uppercase text-muted mr-2 mb-0">
                    {{name}}
                </h6>
            {{/foreach}}
            <p class="h6 text-uppercase text-muted mb-0 ml-auto">
                <time datetime="{{date format="YYYY-MM-DD"}}">{{date format="D MMM YYYY"}}</time> <span
                    class="bull">&bull;</span>
                {{reading_time minute="Un minuto" minutes="% minutos"}}</span>
            </p>
        </a>
    </div>
    {{/if}}
</div>