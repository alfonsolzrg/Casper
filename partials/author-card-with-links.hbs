<section class="pt-7 pt-md-10">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <div class="card card-row shadow-light-lg mb-6">
          <div class="row no-gutters">
            <a class="col-12 col-md-6 bg-cover card-img-left" style="background-image: url({{profile_image}});" href="{{url}}">
              <img src="{{profile_image}}" alt="{{name}}" class="img-fluid d-md-none invisible">
              <div class="shape shape-right shape-fluid-y svg-shim text-white d-none d-md-block">
                <svg viewBox="0 0 112 690" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M116 0H51v172C76 384 0 517 0 517v173h116V0z" fill="currentColor"/></svg>
              </div>
            </a>
            <div class="col-12 col-md-6">
              <a class="card-body" href="{{url}}">
                <h3>
                  {{name}}
                </h3>
                <p class="mb-0 text-muted">
                  {{bio}}
                </p>
              </a>
            <a class="card-meta pb-1" href="{{url}}">
                <hr class="card-meta-divider mb-1">
                <h6 class="text-uppercase text-muted mr-2 mb-0">
                  Redes sociales
                </h6>
                <ul class="list-unstyled list-inline list-social ml-auto mt-2">
                    {{#if website}}
                    <li class="list-inline-item list-social-item mr-3">
                        <a href="{{website}}" class="text-decoration-none">
                            <img src="{{asset "/theme/assets/img/icons/duotone-icons/Devices/iMac.svg"}}" class="list-social-icon" alt="...">
                        </a>
                    </li>
                    {{/if}}
                    {{#if twitter}}
                    <li class="list-inline-item list-social-item mr-3">
                        <a href="{{twitter}}" class="text-decoration-none">
                            <img src="{{asset "/theme/assets/img/icons/social/facebook.svg"}}" class="list-social-icon" alt="...">
                        </a>
                    </li>
                    {{/if}}
                    {{#if twitter}}
                    <li class="list-inline-item list-social-item mr-3">
                        <a href="{{facebook}}" class="text-decoration-none">
                            <img src="{{asset "/theme/assets/img/icons/social/twitter.svg"}}" class="list-social-icon" alt="...">
                        </a>
                    </li>
                    {{/if}}
                </ul>
            </a>
              <div class="card-meta">
                <hr class="card-meta-divider">
                <h6 class="text-uppercase text-muted mr-2 mb-0">
                  <i class="fe fe-map-pin"></i> {{location}}
                </h6>
                <p class="h6 text-uppercase text-muted mb-0 ml-auto">
                    {{plural ../pagination.total empty='Sin publicar' singular='% publicaci√≥n' plural='% publicaciones'}}
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>